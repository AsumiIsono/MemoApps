{
    "name": "Memo App Development",
    "image": "mcr.microsoft.com/devcontainers/python:3.9",
    "features": {},
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "esbenp.prettier-vscode"
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash"
            }
        }
    },
    "postCreateCommand": "apt-get update && apt-get install -y azure-cli && pip install flask",
    "forwardPorts": [5000]
}
